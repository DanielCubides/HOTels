<html>
    <head>
        <link rel="stylesheet" href="~/Styles/Site.css">
        <title>Hotels</title>
    </head>
    <body>
        <div style="position: absolute; left: 90%;">
            <form method="put" action="~/Main/Page.cshtml">
                 <input type="image" name="Salir" src="/Images/Recursos/Salir.jpg" 
                style="width: 50px; height: 50px">
            </form>
        </div>
        <div>
            <h1>Reserva tu almohada</h1>
            <h2>Habitaciones disponibles</h2>
        </div>
        <div>
            <script type="text/javascript">
                function accion() {
                    var boolean = false;
                    for (var i = 0; i < 10; i++) {
                        if (document.forms["form"][i].checked) {
                            boolean = true;
                        }
                    }
                    if (boolean) {
                        document.forms["form"].action = "Reservadas.cshtml";
                    }
                }
            </script>
            <form name="form" method="post" onsubmit="return accion()">
                @{
                  for(int i=0; i<10; i++)  {
                      var precio=100;
                      var name="Habitacion 00"+i+", costo "+(precio+i*50);
                      <input type="checkbox" name="habitaciones" value="@i">@name<br>
                  }
                }
                <br>
                <input type="submit" value="Reservar">
            </form>
        </div>
        <div style="position: absolute; bottom: 1%">
            <form method="put" action="~/Main/BuscarHabitacion.cshtml">
                 <input type="image" name="Salir" src="/Images/Recursos/Regresar.jpg" 
                style="width: 50px; height: 50px">
            </form>
        </div>
    </body>
</html>
