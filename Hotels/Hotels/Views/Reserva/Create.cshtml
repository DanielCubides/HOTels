@model Hotels.Models.Reserva

@{
    ViewBag.Title = "Realizar reservas";
}


@if (!Request.IsAuthenticated)
{
    Response.Redirect("~/");
}

<h2>Realizar reserva</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        


        <div class="editor-label">
           @Html.LabelFor(model => model.StartDate )
        </div>
        <div class="editor-field">
           
            @Html.EditorFor(model => model.StartDate)
            @Html.ValidationMessageFor(model => model.StartDate)

                       
        
               
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.EndDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndDate)
            @Html.ValidationMessageFor(model => model.EndDate)
           
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.HabitacionID, "Seleccionar tipo de habitacion")
        </div>
        <div class="editor-field">
            @Html.DropDownList("HabitacionID", String.Empty)
            @Html.ValidationMessageFor(model => model.HabitacionID)
        </div>

        

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
    
    
    @Html.ActionLink("Volver", "Index")

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


@section head_section{    
   <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
   <script src="@Url.Content("~/Scripts/jquery.ui.datepicker-it.js")" type="text/javascript"></script>   
   @{string fecha = @DateTime.Now.Year + "-0" + @DateTime.Now.Month + "-" + @DateTime.Now.Day;}
    <script type="text/javascript" >
        $(document).ready(function () {
            $("#NewsDate").datepicker();
            $.datepicker.setDefaults($.datepicker.regional["it"]);
        });
</script>

   <link rel="stylesheet" type="text/css" href="/Content/themes/base/jquery.ui.all.css" / >
}
