@model IEnumerable<Hotels.Models.Habitacion>

@{
    ViewBag.Title = "ElegirHabitacion";
}

    <table id="listaHabitaciones">
        <p id="textoListaHabitaciones">
            Escoja la habitación que desea
        </p>
        <tr>
            <th>
                Habitacion No.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)/dia
            </th>
            <th>
                No. de Dias
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Session["dias"]
                    </td>
                    <td>
                        @{var price = item.Price.ToString().AsFloat() * Session["dias"].ToString().AsFloat();
                        var id = item.ID;}
                        $@price
                    </td>
                    <td>
                        @Html.ActionLink("Ver Habitacion", "Details", "Habitacion", new { id = item.ID }, new { @class = "iconoVerHabitacion" })
                        @Html.ActionLink("Crear La Reserva", "CrearLaReserva", "Reserva", new { id = item.ID }, new { @class = "iconoAgregarReserva" })
                    </td>
                </tr>
            }
    </table>

