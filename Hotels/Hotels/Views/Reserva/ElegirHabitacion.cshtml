@model IEnumerable<Hotels.Models.Habitacion>

@{
    ViewBag.Title = "ElegirHabitacion";
}

<h2>ElegirHabitacion</h2>

<table>
    <tr>
     
      
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            No. de Dias
        </th>

        <th>
            Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Session["dias"]
        </td>
        <td>
            @{var price = item.Price.ToString().AsFloat() * Session["dias"].ToString().AsFloat();}
            @price
        </td>
        <td>
            @Html.ActionLink("crear la reserva", "CrearLaReserva", new { id = item.ID })
        </td>
    </tr>
}

</table>
